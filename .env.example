# ============================================================
# EbookGov AI Webhook Server - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values

# ============================================================
# SUPABASE CONFIGURATION
# ============================================================
SUPABASE_PROJECT_URL=https://your-project.supabase.co
SUPABASE_ACCESS_SECRET_KEY=your-supabase-service-role-key

# ============================================================
# VAPI CONFIGURATION
# ============================================================
VAPI_API_KEY=your-vapi-api-key

# ============================================================
# PAYPAL CONFIGURATION (for subscriptions)
# ============================================================
# Get these from PayPal Developer Dashboard: https://developer.paypal.com
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id
PAYPAL_MODE=sandbox  # Use 'live' for production

# ============================================================
# SECURITY CONFIGURATION (CRITICAL FOR PRODUCTION)
# ============================================================
# Generate a secure random key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=your-secure-api-key-here

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================
PORT=3000
NODE_ENV=development  # Use 'production' for production deployment

# Human transfer number (for call transfers)
TEXT_NOW_PHONE_NUMBER=+1234567890
